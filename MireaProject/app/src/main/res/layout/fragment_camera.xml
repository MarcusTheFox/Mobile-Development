<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CameraFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фото-заметка"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/imageViewNotePhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:background="@android:color/darker_gray"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="Tap to take photo"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextNoteCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите вашу заметку здесь"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonSaveNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить заметку"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textViewSavedNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Последняя заметка: "
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

</LinearLayout>